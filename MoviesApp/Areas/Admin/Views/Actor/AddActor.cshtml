@model MoviesApp.Models.Actor

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-white">Add New Actor</h5>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Back to List
            </a>
        </div>

        <div class="card-body">
            <form asp-action="AddActor" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="Name" class="form-label fw-semibold">Name</label>
                    <input asp-for="Name" name="Name" class="form-control" placeholder="Enter actor name"  />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Nantionality" class="form-label fw-semibold">Nationality</label>
                    <input name="Nantionality" asp-for="Nantionality" class="form-control" placeholder="Enter nationality"  />
                    <span asp-validation-for="Nantionality" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="img" class="form-label fw-semibold">Image</label>
                    <input name="Img" asp-for="Img" type="file" class="form-control"  />
                    <span asp-validation-for="Img" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Save Actor
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


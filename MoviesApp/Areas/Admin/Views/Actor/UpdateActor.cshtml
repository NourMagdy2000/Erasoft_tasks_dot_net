@model MoviesApp.Models.Actor

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-white  ">Update Actor</h5>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Back to List
            </a>
        </div>

        <div class="card-body">
            <form asp-action="UpdateActor" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="Name" class="form-label fw-semibold">Name</label>
                    <input asp-for="Name" name="Name" class="form-control" placeholder="Enter actor name" value="@Model.Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Nantionality" class="form-label fw-semibold">Nationality</label>
                    <input name="Nantionality" asp-for="Nantionality" class="form-control" placeholder="Enter nationality" value="@Model.Nantionality" />
                    <span asp-validation-for="Nantionality" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="file" class="form-label">File (optional)</label>

                    <div class="mb-2">
                        <img id="filePreview" src="~/assets/files/@Model.Img" alt="File preview" class="img-fluid rounded border" style="max-height: 200px;">
                    </div>
                    <input type="file" id="file" name="File" class="form-control" placeholder="Attach file name or link" formenctype="application/x-www-form-urlencoded" value="@Model.Img">
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Update Actor
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // ✅ Change preview automatically when a new file is chosen
    document.getElementById("file").addEventListener("change", function (event) {
        const file = event.target.files[0];
        const preview = document.getElementById("filePreview");

        if (file) {
            // For image preview
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
            };
            reader.readAsDataURL(file);
        } else {
            // If no file selected, revert to old image
            preview.src = '@Url.Content("~/assets/files/" + Model.Img)';
        }
    });
</script>

@model IEnumerable<MoviesApp.Models.Movie>

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-white">Add New Cinema</h5>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Back to List
            </a>
        </div>

        <div class="card-body">
            <form asp-action="AddCinema" method="post">

                <div class="mb-3">
                    <label class="form-label fw-semibold">Name</label>
                    <input  name="Name" class="form-control" placeholder="Enter cinema name" />
                    @* <span> class="text-danger"></span> *@
                </div>

                <!-- Movies Selector -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Movies in this Cinema</label>

                    <select id="Movies"
                            name="SelectedMovies"
                            class="form-select"
                            multiple
                            size="6">
                        @foreach (var movie in Model )
                        {
                            <option value="@movie.Id">@movie.Title</option>
                        }
                    </select>

                    <small class="text-muted">Hold Ctrl to select multiple movies</small>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Save Cinema
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0/dist/js/select2.min.js"></script>

<script>
    $(document).ready(function () {
        $('#Movies').select2({
            placeholder: "Select movies",
            allowClear: true
        });
    });
</script>
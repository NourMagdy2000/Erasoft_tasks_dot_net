            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Back to List
            </a>
        </div>

        <div class="card-body">
            <form asp-action="UpdateCinema" method="post">

                <!-- Hidden ID -->
                <input type="hidden" asp-for="@Model.Cinema.Id" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Name</label>
                    <input asp-for="@Model.Cinema.Name" class="form-control" placeholder="Enter cinema name" />
                </div>


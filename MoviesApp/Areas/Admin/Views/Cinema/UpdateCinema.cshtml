                <select id="Movies"
                        name="SelectedMovies"
                        class="form-select"
                        multiple
                        size="6">

                    @foreach (var movie in Model.Movies)
                    {
                        bool isSelected = Model.CinemaMovies!= null && Model.CinemaMovies.Contains(movie.Id);

                        <option value="@movie.Id" selected="@(isSelected ? "selected" : null)">
                            @movie.Title
                        </option>
                    }
                </select>
                    <small class="text-muted">Hold Ctrl or Command to select multiple movies</small>
               
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Update Cinema
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0/dist/js/select2.min.js"></script>

<script>
    $(document).ready(function () {
        $('#Movies').select2({
            placeholder: "Select movies",
            width: "100%",

            // Template for each option in dropdown
            templateResult: function (data) {
                if (!data.id) return data.text; // placeholder
                return $('<span>' + data.text + ' <i class="fas fa-film float-end"></i></span>');
            },

            templateResult: function(data) {
        if (!data.id) return data.text;
        var icon = data.selected ? '<i class="fas fa-check-circle float-end"></i>' : '';
        return $('<span>' + data.text + ' ' + icon + '</span>');
    }
            escapeMarkup: function (markup) { return markup; } // allow HTML
        });
    });
</script>


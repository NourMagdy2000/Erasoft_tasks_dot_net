<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Create new Movie</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <input class="form-control" hidden name="Id" value="@Model.Movie.Id">
                <div class="mb-3">
                <div class="mb-3">

                    <label for="name" class="form-label">title</label>
                    <input class="form-control" name="Title" value="@Model.Movie.Title">
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">img</label>
                    <input class="form-control" value="@Model.Movie.Img" name="Img" type="file" accept=".png , .jpg">
                </div>
                <div class="mb-3">
                        <label for="SubImages" class="form-label">SubImages</label>
                        <input class="form-control" name="SubImages" type="file" accept=".png , .jpg" multiple>
                </div>
                <div class="mb-3 d-flex ">
                    @foreach (var item in Model.Movie.movie_Sub_Imgs)
                    {
                        <div style="position:relative;">
                            <img id="preview"
                                 src="~/assets/files/Movie_sub_imgs/@item.img"
                                 alt="Current Image"
                                 style="max-width: 200px; border:1px solid #ccc; padding:5px; border-radius:10px;" />
                            <a href="/Admin/Movie/DeleteSubImage?MovieId=@item.Movieid&img=@item.img" class="btn btn-danger" style="position:absolute; top:0; right:0; border-radius:50%; ">x</a>
                        </div>
                    }
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <div class="form-floating">
                        <textarea  class="form-control" placeholder="Leave a description here" style="height: 100px" name="Description">@Model.Movie.Description</textarea>
                        <label for="description">You Description Here...</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="Price" class="form-label">Price</label>
                    <input class="form-control" name="Price" type="number" value="@Model.Movie.Price">
                </div>
                <div class="mb-3">
                    <label for="Date" class="form-label">Date and time</label>
                        <input class="form-control" value="@Model.Movie.Date.ToString("yyyy-MM-dd HH:mm")" name="Date" type="datetime-local">
                </div>
                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select name="Status" class="form-select">
                        @if (@Model.Movie.Status)
                        {
                            <option selected  value="true">Active</option>
                            <option value="false">InActive</option>
                        }
                        else
                        {
                            <option  value="true">Active</option>
                            <option selected value="false">InActive</option>
 }

                        
                       
                    </select>
                </div>

                <div class="mb-3">
                    <label for="CategoryId" class="form-label">Categories</label>
                    <select name="CategoryId" class="form-control">
                        <option>--Select Category--</option>
                        @foreach (var item in Model.Categories)
                        {
                            @if (ViewBag.CategoryId == item.Id)
                            {
                                <option value="@item.Id" selected> @item.Name</option>
                                continue;
                            }
                            <option value="@item.Id"> @item.Name</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>




<script>
    function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById("preview");

        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result; // الصورة الجديدة
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

<script>
    const conateiner = document.getElementById('colorContainer');
    const addBtn = document.getElementById('addButtonColor');

    addBtn.addEventListener('click', () => {
        var colorRow = document.createElement('div');

        colorRow.className = 'mb-2 d-flex align-item-center gap-1'
        colorRow.innerHTML = `
            <input type="color" class="form-control form-control-color" name="Colors">
            <button type="Button" class="btn btn-danger btn-sm removeColor">x</button>
        `;

        conateiner.appendChild(colorRow);
    });

    conateiner.addEventListener('click', (e) => {
        if(e.target.classList.contains('removeColor')) {
            e.target.parentElement.remove();
        }
    })
</script>